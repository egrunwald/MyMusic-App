<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_400"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:id="@+id/navigation_bar">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/recent_nav_text_view"
            android:theme="@style/Theme.HeaderButtonSelectedTheme"
            android:text="Recent Songs"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/songs_nav_text_view"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:theme="@style/Theme.HeaderButtonDefaultTheme"
            android:text="All Songs"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/player_nav_text_view"
            android:theme="@style/Theme.HeaderButtonDefaultTheme"
            android:text="Player"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="8dp"
        android:layout_margin="8dp"
        android:id="@+id/recent_list"/>

</LinearLayout>